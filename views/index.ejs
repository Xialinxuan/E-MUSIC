                    songUrl = data.songUrl;
                    songResult = data.songResult;
                    currentSong = songResult.name;
                    currentArtist = songResult.artists[0].name;
                    detail = data.detail;
                    album = detail.al.picUrl;
                    songLyric = data.songLyric;

                    //修改HTML值
